@page "/Article/{tutorialsname}"

@using UI.Data.Models

<div>
    <i class="fa fa-home homelink" @onclick='() => NavMgr.NavigateTo("/")'></i>
</div>
<div class="header-container">
    <div>
        <h1>@TutorialsName</h1>
    </div>
</div>
@if (pages.Count == 0)
{
    <h2>Loading article..</h2>
}
else
{
    <div class="layout">
        <div class="steps-container">
            @foreach (ArticlePage articlePage in pages)
            {
                <div class="step @(currentPage == articlePage ? "active" : "")">
                    @articlePage.Name
                </div>
            }
        </div>
        <div class="page-card">
            <div class="top-buttons-row">
                <div class="buttons-box">
                    @if (stepIndex != 0)
                    {
                        <button type="button" class="article-button prev-page-button" @onclick="() => ChangePage(-1)">
                            Previous
                        </button>
                    }
                    @if (stepIndex != pages.Count - 1)
                    {
                        <button type="button" class="article-button next-page-button" @onclick="() => ChangePage(1)">
                            Next
                        </button>
                    }
                    else
                    {
                        <button type="button" class="article-button home-button">Home</button>
                    }
                </div>
            </div>
            <div class="article-content-container">
                @currentPage.Html
            </div>
        </div>
        <div class="steps-container steps-container-spacer">
        </div>
    </div>
}