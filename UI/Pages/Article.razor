@page "/Article/{tutorialsname}"

@using UI.Data.Models

<h3>@TutorialsName</h3>

@if (pages.Count == 0)
{
    <h2>Loading article..</h2>
}
else
{
    <div class="layout">
        <div class="steps-container">
            @foreach (ArticlePage articlePage in pages)
            {
                <div class="step @(currentPage == articlePage ? "active" : "")">
                    @articlePage.Name
                </div>
            }
        </div>
        <div class="page-container">
            <div class="tutorials-page">
                @currentPage.Html
            </div>
        </div>
        <div class="steps-container steps-container-spacer">
        </div>
    </div>
}